config LUA
	bool "Lua scripting language"
	default n
	depends on POSIX_API
	depends on PICOLIBC || NEWLIB_LIBC
	depends on FILE_SYSTEM
	help
	  This option adds the lua library to the zephyr build.

config LUA_ROOT
	string "Root for lua files"
	default "/lfs/"
	depends on LUA
	help
		This option allows to change the default path for lua files used 
		with require (LUA_PATH_DEFAULT)
		Lua modules go in LUA_ROOT/share/lua/<version>/
		C lua modules go in LUA_ROOT/lib/lua/<version>/

if LUA

# posible additional options, like for instance adding a shell command for a lua
# interpreter

endif
